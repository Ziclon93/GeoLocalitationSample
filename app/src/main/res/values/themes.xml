<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FreeNowTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/sunset_700</item>
        <item name="colorPrimaryVariant">@color/mustard</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="Theme.FreeNowTest.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FreeNowTest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FreeNowTest.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.FreeNowTest.HolderTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/vehicle_card_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>